<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <button type="button" class="btn btn-outline-danger btn-add" data-toggle="modal"
                                data-target="#modal-01">
                            <i class="fas fa-plus mr-1"></i> เพิ่มข้อมูล
                        </button>
                        <div class="">
                            <span class="a-pointer font-size-12 btn-refresh" onclick="fetchData()">
                                <i class="fas fa-sync-alt pr-1"></i>รีเฟรชข้อมูล
                            </span>
                        </div>
                    </div>
                    <div id="print"></div>
                    <div class="table-responsive">
                        <table id="Table-1" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th>ชื่อข่าวสาร</th>
                                    <th>เครื่องมือ</th>
